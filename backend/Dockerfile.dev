# Development Dockerfile
FROM python:3.11-slim

# Install Node.js
RUN apt-get update && apt-get install -y \
    curl \
    && curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install rembg with CLI support and all dependencies
RUN pip install --no-cache-dir rembg[cli] onnxruntime

# Pre-download rembg models (u2net by default)
RUN python -c "from rembg import new_session; new_session('u2net')"

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including devDependencies)
RUN npm ci

# Copy other necessary files
COPY tsconfig.json ./
COPY nodemon.json ./

# The source code will be mounted as a volume
# So we don't need to copy it here

# Set environment variables
ENV NODE_ENV=development
ENV PORT=8080

# Expose port
EXPOSE 8080

# Start with nodemon for hot-reloading
CMD ["npm", "run", "dev"]